<Window x:Class="SIMSKT3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSKT3"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFD0B8E5">
        <Button Content="Options doctor" HorizontalAlignment="Left" Height="50" Margin="91,149,0,0" VerticalAlignment="Top" Width="115" Click="Button_ClickDoctor" BorderBrush="#FF8AB3F0" Background="#FF8AB3F0" Foreground="#FF262C61" />
        <Button Content="Options secretary" HorizontalAlignment="Left" Height="50" Margin="91,236,0,0" VerticalAlignment="Top" Width="115" Click="Button_ClickOptionsSecretary" Background="#FF8AB3F0" BorderBrush="#FF8AB3F0" Foreground="#FF262C61"/>
        <Button Content="Exit" HorizontalAlignment="Left" Height="50" Margin="634,320,0,0" VerticalAlignment="Top" Width="115" Click="Button_ClickExit" Background="#FF8AB3F0" Foreground="#FF262C61" BorderBrush="#FF8AB3F0"/>
        <Button Content="Options director" HorizontalAlignment="Left" Margin="91,60,0,0" VerticalAlignment="Top" Width="115" Height="50" Click="Button_ClickDirector" BorderBrush="#FF8AB3F0" Background="#FF8AB3F0" Foreground="#FF262C61"/>
        <Button Content="Options patient" HorizontalAlignment="Left" Height="50" Margin="91,320,0,0" VerticalAlignment="Top" Width="115" Click="Button_ClickPatient" Background="#FF8AB3F0" BorderBrush="#FF8AB3F0" Foreground="#FF262C61"/>
    </Grid>
</Window>
